<div class="user_info_contents">
  <div class="user_info_main">
    <h2 class="user_info_title">あなたの情報を入力</h2>
    <%= form_with model: @user_info, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 画像 %>
    <div class="user_field">
      <div class="weight-bold-text">
        あなたたちの写真
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"user_info_image" %>
      </div>
    </div>
    <%# 画像 %>


    <%# あなたの説明 %>
    <div class="user_field">
      <div class="weight-bold-text">
        あなたたちの一言！
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :text, class:"user_text", id:"info", placeholder:"これから出会う方にひとこと伝えましょう！" ,rows:"3" ,maxlength:"30" %>
    </div>
    <%# /あなたの説明 %>

    <%# あなたたちの詳細 %>
    <div class="user_field">
      <div class="weight-bold-text">
        あなたたちの人数
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:people_num_id, PeopleNum.all, :id, :name, {}, {class:"select-box", id:"user_info_people_num"}) %>
    <div class="user_field">
      <div class="weight-bold-text">
        あなたたちのいるエリア
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box", id:"item-user_info_area"}) %>
    </div>
    <%# /あなたたちの詳細 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "登録する" ,class:"btn" %><br>
      <%=link_to 'マイページに戻る', pre_page_user_infos_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  
</div>