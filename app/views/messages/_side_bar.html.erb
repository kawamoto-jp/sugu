<div class="side-bar-header">
  <div class="header-name">
    <%= current_user.nickname %>さん
  </div>
  <div class="create-room">
    <%= link_to "マイページに戻る", pre_page_user_infos_path %>
  </div>
</div>

<div class="rooms">
  <p class="under">名前を押してチャットを始めます</p>
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
      <% t = room.room_users.where.not(user_id: current_user.id).pluck(:user_id) %>
      <% @chat_user = User.find_by(id: t) %>
      <%= link_to @chat_user.nickname, room_messages_path(room), class: 'w' %>
      <% @hhh = @chat_user %>
      </div>
    </div>
  <% end %>
</div>