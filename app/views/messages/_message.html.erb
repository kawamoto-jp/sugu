<div class="message">
  <div class="upper-message">
  <% link_to %>
    <div class="m_user_img">
      <%= image_tag message.user.user_info.image.variant(resize:'150x150'), class: "user_img" if message.user.user_info.image.attached? %>
    </div>

    <div class="m_user_nickname">
      <%= message.user.nickname%>
    </div>

    <div class="m_date">
      <%= l message.created_at%>
    </div>
  </div>

  <div class="m_content">
    <%= message.content%>
  </div>
</div>